<% provide(:title, 'All users') %>
<h1>ユーザ一覧</h1>
<div>
  <%= paginate @users, window: 10, outer_window: 1 %> 
</div>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %> 
      <%= link_to "delete", user, method: :delete, data: { confirm: 'ユーザを消去しますか？' } %>
      <% end %>
    </li>
  <% end %>
</ul>